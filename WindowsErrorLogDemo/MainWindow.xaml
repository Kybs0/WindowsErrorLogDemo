<Window x:Class="WindowsErrorLogDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsErrorLogDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
<Button Content="获取异常日志" Click="ButtonBase_OnClick" HorizontalAlignment="Center" Height="26" Width="100"></Button>
        <ScrollViewer  Grid.Row="1">
            <TextBlock x:Name="ErrorTextBlock" TextWrapping="Wrap"></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
